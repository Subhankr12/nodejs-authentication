<h1>Reset Password</h1>

<form action="/users/reset" method="POST">
  <input
    type="password"
    name="password"
    placeholder="Enter new password"
    required
  />
  <input
    type="password"
    name="confirm_password"
    placeholder="Confirm password"
    required
  />
  <input type="submit" value="Reset" />
</form>
